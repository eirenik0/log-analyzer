# Log-Analyzer Environment Configuration
# Copy this file to .env and adjust values as needed
# For CLI documentation, run: log-analyzer --help

# Global configuration options
LOG_ANALYZER_FORMAT=text      # Output format (text or json)
LOG_ANALYZER_JSON=false       # Shorthand for JSON output (implies compact=true)
LOG_ANALYZER_COMPACT=false    # Compact output mode (true or false)
LOG_ANALYZER_OUTPUT=          # Default output file path, leave empty for stdout
LOG_ANALYZER_CONFIG=          # Optional config/profile TOML path
LOG_ANALYZER_COLOR=auto       # Color mode (auto, always, never)
LOG_ANALYZER_VERBOSE=0        # Verbosity level (0-3, higher is more verbose)
LOG_ANALYZER_QUIET=false      # Show only errors (overrides verbose if true)
LOG_ANALYZER_FILTER=          # Filter expression (e.g., \"c:core !l:DEBUG\")
