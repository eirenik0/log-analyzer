# Log-Analyzer Environment Configuration
# Copy this file to .env and adjust values as needed
# For CLI documentation, run: log-analyzer --help

# Global configuration options
LOG_ANALYZER_FORMAT=text      # Output format (text or json)
LOG_ANALYZER_COMPACT=false    # Compact output mode (true or false)
LOG_ANALYZER_OUTPUT_FILE=     # Default output file path, leave empty for stdout
LOG_ANALYZER_COLOR=auto       # Color mode (auto, always, never)
LOG_ANALYZER_VERBOSE=0        # Verbosity level (0-3, higher is more verbose)
LOG_ANALYZER_QUIET=false      # Show only errors (overrides verbose if true)

# Default filter settings for compare command - include filters
LOG_ANALYZER_COMPONENT=       # Filter by component name
LOG_ANALYZER_LEVEL=           # Filter by log level
LOG_ANALYZER_CONTAINS=        # Filter logs containing specific text
LOG_ANALYZER_DIRECTION=       # Filter by direction (incoming or outgoing)

# Default filter settings for compare command - exclude filters
LOG_ANALYZER_EXCLUDE_COMPONENT= # Exclude logs with specific component
LOG_ANALYZER_EXCLUDE_LEVEL=   # Exclude logs with specific level
LOG_ANALYZER_EXCLUDE_TEXT=    # Exclude logs containing specific text